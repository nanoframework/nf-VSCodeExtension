{
  "name": "nanoframeworkextension",
  "displayName": "nanoFramework",
  "description": "Build, deploy and flash your nanoFramework solutions.",
  "icon": "nanoFramework-logo.png",
  "publisher": "nanoFramework",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.61.0"
  },
	"repository": {
		"type": "git",
		"url": "https://github.com/nanoframework/nf-VSCodeExtension.git"
	},
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onCommand:nanoframeworkextension.nfbuild",
    "onCommand:nanoframeworkextension.nfdeploy",
    "onCommand:nanoframeworkextension.nfflash"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nanoframeworkextension.nfbuild",
        "title": "nanoFramework: Build Project"
      },
      {
        "command": "nanoframeworkextension.nfdeploy",
        "title": "nanoFramework: Deploy Project"
      },
      {
        "command": "nanoframeworkextension.nfflash",
        "title": "nanoFramework: Flash device"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .sln",
          "command": "nanoframeworkextension.nfbuild",
          "group": "navigation@1"
        },
        {
          "when": "resourceExtname == .sln",
          "command": "nanoframeworkextension.nfdeploy",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "postinstall": "gulp build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "download": "^8.0.0",
    "eslint": "^7.32.0",
    "glob": "^7.2.0",
    "gulp": "^4.0.2",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@types/node": "14.x",
    "axios": "^0.23.0",
    "extract": "^1.0.0",
    "extract-zip": "^2.0.1",
    "globby": "^11.0.3",
    "node-usb-native": "^0.0.20"
  }
}
